    "version": "0.2.0",
    "configurations": [

    
        {
            "cwd": "${workspaceFolder}/frontend",
            "command": "yarn install",
            "name": "Run yarn install",
            "type": "node-terminal"
        },
        {
            "cwd": "${workspaceFolder}/frontend",
            "command": "yarn build",
            "name": "Run yarn build",
            "type": "node-terminal"
        },
        {
            "cwd": "${workspaceFolder}/frontend",
            "command": "yarn lint",
            "name": "Run yarn lint",
            "type": "node-terminal"
        },
        {
            "cwd": "${workspaceFolder}/frontend",
            "command": "yarn serve",
            "name": "Run yarn serve",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        }
    ]
}